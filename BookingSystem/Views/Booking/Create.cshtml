@model BookingSystem.ViewModels.BookingViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "";

}
<head>
    @*
    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet"> *@

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookingSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookingSystem.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <!-- Registration Form -->
    <section class="bg-primary py-3 py-md-5 py-xl-8">

        <div class="container">
            <div class="row gy-4 align-items-center">
                <div class="col-12 col-md-6 col-xl-7">
                    <div class="d-flex justify-content-center text-bg-primary">
                        <div class="col-12 col-xl-9">

                            <h1 class="m-0 text-white"><i class="fa fa-map-marker-alt me-3"></i>Travela</h1>

                            <hr class="border-primary-subtle mb-4" style="opacity: 1;">
                            <h2 class="h1 mb-4 text-white">We make digital products that drive you to stand out.</h2>
                            <p class="lead mb-5 text-white-50">We write words, take photos, make videos, and interact with artificial intelligence.</p>

                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-xl-5">
                    <div class="card border-0 rounded-4 shadow-lg">
                        <!-- Add shadow-lg class here -->
                        <div class="card-body p-3 p-md-4 p-xl-5">
                            <div class="row">
                                <div class="col-12">
                                    <div class="mb-4">
                                        <h3>
                                            Let's Book a Room 
                                        </h3>
                                    
                                    </div>
                                </div>
                            </div>


                            <form asp-action="Create" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="GuestName">Guest Name</label>
                                    <div class="input-group">
                                        <!-- Input field for Guest Name -->
                                        <input asp-for="GuestName" class="form-control" required />
                                        <!-- User icon on the right -->
                                        <span class="input-group-text">
                                            <i class="bi bi-person-fill"></i>
                                        </span>
                                        <span asp-validation-for="GuestName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Email">Email</label>
                                    <div class="input-group">
                                        <!-- Email input field -->
                                        <input asp-for="Email" class="form-control" placeholder="Such abc@gmail.com" required />
                                        <!-- Email icon -->
                                        <span class="input-group-text">
                                            <i class="bi bi-envelope-fill"></i>
                                        </span>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label asp-for="CheckInDate">Check-in Date</label>
                                    <input asp-for="CheckInDate" type="date" class="form-control" required />
                                    <span asp-validation-for="CheckInDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CheckOutDate">Check-out Date</label>
                                    <input asp-for="CheckOutDate" type="date" class="form-control" required />
                                    <span asp-validation-for="CheckOutDate" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="NumberOfRooms">Number of Rooms</label>
                                    <input asp-for="NumberOfRooms" type="number" class="form-control" required min="1" />
                                    <span asp-validation-for="NumberOfRooms" class="text-danger"></span>
                                </div>


                                <div class="form-group">
                                    <label asp-for="cardNumber">Card Information</label>
                                    <div class="input-group">
                                        <input asp-for="cardNumber" type="text" class="form-control" placeholder="Enter your card number" required />
                                        <div class="input-group-append">
                                            <!-- Apply inline style to change the color -->
                                            <span class="input-group-text" style="color: blue;"> 
                                              
                                                <i class="fab fa-cc-visa"></i>
                                            </span>
                                            <span asp-validation-for="cardNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label asp-for="CardholderName">Cardholder Name</label>
                                    <div class="input-group">
                                        <!-- Input field for Guest Name -->
                                        <input asp-for="CardholderName" class="form-control" required />
                                        <!-- User icon on the right -->
                                        <span class="input-group-text">
                                            <i class="bi bi-person-fill"></i>
                                        </span>
                                        <span asp-validation-for="CardholderName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Country"> Country or Region </label>
                                    <div class="input-group">

                                        <select asp-for="Country" class="form-control" id="Country" style="width: 100%;">


                                            <option value="">Select Country</option>
                                        </select>
                                        <span asp-validation-for="Country" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-block">Submit</button> <!-- Added btn-block class -->
                                </div>

                            </form>
                            <div class="col-12">
                                <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-end mt-4">
                                    <p>Book Another Room? <a href="">Back to Rooms</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
