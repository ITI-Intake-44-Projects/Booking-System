@model ImageUploadViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ImageUploader</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1>Upload Image</h1>

        @using (Html.BeginForm("UploadImage", "Image", FormMethod.Post, new { enctype = "multipart/form-data", @class = "mt-4" }))
        {
            <div class="form-group">
                <label for="SelectedCity">Select City:</label>
                @Html.DropDownListFor(model => model.SelectedCity, new SelectList(Model.CityList), "Select City", new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="ImageFile">Choose Image:</label>
                <input type="file" name="ImageFile" class="form-control-file" />
            </div>

            <button type="submit" class="btn btn-primary">Upload</button>
        }
    </div>

    <!-- Include Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
